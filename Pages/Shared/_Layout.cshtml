<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bortsevych</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bortsevych.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand " asp-area="" asp-page="/Index">Bortsevych</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <div class="collapse navbar-collapse justify-content-center" id="navbarNavLightDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark lineHover" asp-area="" asp-page="/Projects">My projects</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Social Networks
                                </a>
                                <ul class="dropdown-menu dropdown-menu-light">
                                    <li class="dropdown-item">
                                        <a href="https://www.instagram.com/cuz.one/" class="nav-link text-dark">
                                            <img class="d-inline-block align-top"
                                                 src="~/img/u_instagram-alt.svg">
                                            Instagram
                                        </a>
                                    </li>
                                    <li class="dropdown-item">
                                        <a href="https://github.com/BIGIMIT" class="nav-link text-dark">
                                            <img class="d-inline-block align-top"
                                                    src="~/img/u_github.svg">
                                            GitHub
                                        </a>
                                    </li>
                                    <li class="dropdown-item">
                                        <a href="https://t.me/viktorbortsevich" class="nav-link text-dark">
                                            <img class="d-inline-block align-top"
                                                 src="~/img/u_telegram.svg">
                                            Telegram
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Bortsevych - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>