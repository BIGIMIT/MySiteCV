@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Bortsevych.Models;
@model Bortsevych.Pages.ProjectsModel
@{
    <div class="container">
        <div class="card" style="">
            <div class="row">
                <div class="col">
                    <img src="/images/ProjectPic.png" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title" style="font-weight: 500">This is a page where you can see my projects and express your opinion.</h5>
                        <p class="card-text">Some projects I have not finished yet or they will be redone, pay attention to the preface where I talk about this</p>
                        <div class="align-self-center">
                            <p class="card-text"><small class="text-muted">Last Update: @Model.LastUpdate.ToString("d")</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding-top: 20px">
        <div class="input-group mb-3" style="margin-bottom: 20px !important">
            <input type="text" class="form-control" placeholder="Eenter language or technology" aria-label="Text input with dropdown button">
            <button class="btn btn-outline-secondary" type="button">Search</button>
            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <form class="dropdown-menu dropdown-menu-end p-4">
                <div class="mb-3">
                    <label for="exampleDropdownFormEmail2" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleDropdownFormEmail2" placeholder="email@example.com">
                </div>
                <div class="mb-3">
                    <label for="exampleDropdownFormPassword2" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleDropdownFormPassword2" placeholder="Password">
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="dropdownCheck2">
                        <label class="form-check-label" for="dropdownCheck2">
                            Remember me
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        </div>
    </div>


    <div class="container" style="padding-bottom:20px;">
        <div class="row">

            @if (Model.Projects is List<Project>)
            {

                int i = Model.Projects.Count;
                foreach (Project project in Model.Projects)
                {

                    if (i == 1) { ViewData["countOfCard"] = 12; }
                    <div class="col-@ViewData["countOfCard"]">
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-6 text-start">
                                        @project.Languages
                                    </div>
                                    <div class="col-6 text-muted text-end">
                                        Last Update:
                                        @{
                                            if ((DateTime.Now.Date - project.UpdateAt.Date).TotalDays == 0)
                                            {
                                                ViewData["time"] = "Today";
                                            }
                                            else if ((DateTime.Now.Date - project.UpdateAt.Date).TotalDays == 1)
                                            {
                                                ViewData["time"] = "Yesterday";
                                            }
                                            else
                                            {
                                                ViewData["time"] = (DateTime.Now.Date - project.UpdateAt.Date).TotalDays + " days ago";
                                            }
                                        }
                                        @ViewData["time"]
                                    </div>
                                </div>
                            </div>
                            <div class="card-body text-start">
                                <div class="row">
                                    <div class=" col-12 col-sm-9">
                                        <h5 class="card-title">@project.Title</h5>
                                        <p class="card-text">@project.Description</p>
                                    </div>
                                    <div class="text-end col-12 col-sm-3 align-self-center">
                                        <a asp-page="/Project" asp-route-id="@project?.ID" class="btn btn-primary">More --></a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    i--;

                }

            }


        </div>
    </div>

}
